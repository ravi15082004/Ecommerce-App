{
    "compilerOptions": {
        "module": "ESNEXT",
        "target": "ES2024",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    }
}